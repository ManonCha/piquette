

<div class="review-form-container">
  <div class="title-header">
    <h1>Nouvelle<br>dégustation</h1>
  </div>
  <div class="new-review-container">
    <%= simple_form_for [@bottle, @review] do |f| %>

      <fieldset class="rating">
        <input type="radio" id="star5" name="review[rating]" value="5" />
        <label class = "full" for="star5" title="Awesome - 5 stars"></label>

        <input type="radio" id="star4" name="review[rating]" value="4" />
        <label class = "full" for="star4" title="Pretty good - 4 stars"></label>

        <input type="radio" id="star3" name="review[rating]" value="3" />
        <label class = "full" for="star3" title="Meh - 3 stars"></label>

        <input type="radio" id="star2" name="review[rating]" value="2" />
        <label class = "full" for="star2" title="Kinda bad - 2 stars"></label>

        <input type="radio" id="star1" name="review[rating]" value="1" />
        <label class = "full" for="star1" title="Sucks big time - 1 star"></label>

        <input type="radio" id="starhalf" name="review[rating]" value="half" />
        <label class="half" for="starhalf" title="Sucks big time - 0.5 stars"></label>
      </fieldset>

      <%= f.input :comment, label:"commentaire" %>
      <%= f.input :tasting_date, as: :string, required: true, input_html: {class: "datepicker"}, label:"date" %>

      <%= f.button :submit, 'Ajouter à mon carnet', class:"review-cta bloup" %>
    <% end %>
  </div>
</div>


