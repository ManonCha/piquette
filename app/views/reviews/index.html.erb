
<div class="piquette-header">
  <%= image_tag "wine.svg", alt: "mes dégustations" %><h1>Mes dégustations</h1>
</div>

<%= render 'user_bottles/search_bar' %>

<div class="container_user_bottle_index">
  <% @reviews.each do |review| %>
    <div type="button" data-toggle="modal" data-target="#modal<%= review.id %>">
      <%= render "reviews/card_review", review: review %>
    </div>
    <%= render "reviews/modal_review", review: review %>
  <% end %>
</div>
