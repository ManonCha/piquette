  <% 15.times do %>
<div class="container_user_bottle_index">

  <% @user_bottles.each do |user_bottle| %>
    <button type="button" data-toggle="modal" data-target="#modal<%= user_bottle.id %>">

      <div class="card_user_bottle_index <%= user_bottle.bottle.color.name %>">

        <div class="image_card_user_bottle_index">
          <img src="../../assets/images/red_wine.png" alt="">
        </div>

        <div class="content_card_user_bottle_index">

          <div class="title_card_user_bottle_index">
            <h5><%= user_bottle.bottle.title.capitalize %></h5>
          </div>

          <div class="desc_card_user_bottle_index">
            <p><%= user_bottle.bottle.designation.capitalize%></p>
          </div>
          <div class="footer_card_user_bottle_index">
            <div class="year_card_user_bottle_index">
              <p><%= user_bottle.bottle.year%></p>
            </div>

            <% if user_bottle.bottle.best_after > Date.today.year%>
              <div class="keep_card_user_bottle_index">
                <p>A boire</p>
              </div>
            <% else %>
              <div class="keep_card_user_bottle_index">
                <p>A garder</p>
              </div>
            <% end %>
          </div>

        </div>
      </div>

    </button>
</div>


<div class="modal fade" id="modal<%= user_bottle.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= user_bottle.bottle.title %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<% end %>
    <% end %>

