<div class="piquette-header">
  <%= image_tag "home.svg", alt: "Home" %>
  <h1>Résumé</h1>
</div>


<div class="piquette-wrapper">
   <div class="bottle-modal-cta" >
    <%= link_to "Besoin d'inspiration ?", search_path %>
  </div>

    <div class="piquette-card piquette-home-card">
      <div class="piquette-card-title">
        <h3>Ma Cave</h3>
      </div>
  <!--   <div class='home-cellar-picto'>
      <div class='home-picto-glass'>
        <i class="fas fa-wine-glass"></i>
      </div> -->
      <div class="card-contenu text-center">
        <% if current_user %>
          <div>
            <p class="center-element-home">
              <strong>
                <%= pluralize(@user_bottles, "bouteille", "bouteilles")%>
              </strong>
            </p>
          </div>
          <div style="width: 55%;  margin: 20px auto 20px auto;">
            <p style="margin-bottom: 0; padding-right: 0px;"><strong>Couleur</strong></p>
            <canvas id='bottle_charts' width="100" height="100" data-wine='<%=@user_red_bottles%>, <%=@user_yellow_bottles%>, <%=@user_pink_bottles%>, <%=@user_champ_bottles%> '>
            </canvas>
          </div>
          <div style="width: 90%; margin: 0 auto 15px auto;">
            <p style="margin-bottom: 0"><strong>Top regions</strong></p>
            <canvas id='regions_wine' data-bar='<%=@sorted_bottles[0][1]%>
              ,<%=@sorted_bottles[1][1]%>, <%=@sorted_bottles[2][1]%>, <%=@sorted_bottles[3][1]%> ' data-labels="<%= @sorted_bottles.map(&:first).first(4).to_json %>"></canvas>
          </div>
          <div style="width: 91%; margin: 20px auto 0 auto;">
            <p style="margin-bottom: 0"><strong>Etat des stocks</strong></p>
            <canvas id='bottle_lines' data-line='<%=@boire%>, <%=@garder%>, <%=@trop_vieux%>'></canvas>
          </div>
        <% else %>
          <p>Ta cave est vide.</p>
        <% end %>
      </div>
      <%= link_to "", user_bottles_path, class:'card-link' %>
    </div>

</div>

