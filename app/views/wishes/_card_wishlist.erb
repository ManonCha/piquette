<div class="piquette-wrapper" data-wish-id="<%= wish.id %>">
  <div class="piquette-card">
  <%= render "wishes/heart_button", bottle: wish.bottle %>

    <div class="piquette-card-title">
      <h3><%= wish.bottle.title.capitalize %> <%= wish.bottle.year %></h3>
      <h4><%= wish.bottle.winery.name.upcase%></h4>
      <p><%= wish.bottle.region.name%></p>
    </div>

    <div class="piquette-card-content">

      <div class="piquette-card-content-item">
        <p><strong>Couleur</strong></p>
        <div class="piquette-card-content-item-color <%= wish.bottle.color.name %>"></div>
      </div>

      <div class="piquette-modal-content-item">
        <p><strong>Apogée</strong></p>
        <h5><%= wish.bottle.best_after %></h5>
        <h5><%= wish.bottle.best_before %></h5>
      </div>

      <div class="piquette-card-content-item">
        <p><strong>Maturation</strong></p>
        <% if wish.bottle.best_after <= Date.today.year && wish.bottle.best_before > Date.today.year %>
          <h5>👍</h5>
        <% elsif wish.bottle.best_before < Date.today.year %>
          <h5>👎</h5>
        <% elsif wish.bottle.best_after > Date.today.year %>
          <h5>✋</h5>
        <% end %>
      </div>
    </div>
  </div>
</div>

